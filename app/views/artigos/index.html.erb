<h1 id="title">Lista de artigos artigos</h1>


<div>
  <% @artigos.each do |artigo| %>
    <div id="li-article">
        <a class="li-article-link" href="/artigos/<%= artigo.id %>">
            <%= artigo.title%>
        </a>
        <div id="posted-at">
          ‚è≤ postado <%= time_tag artigo.created_at, "data-local": "time-ago" %>
        </div>
    </div>
  <% end %>
</div>


<div id="new-article-content">
  <%= button_to "Novo Artigo", new_artigo_path, class: 'new-article-button', method: :get %>
</div>